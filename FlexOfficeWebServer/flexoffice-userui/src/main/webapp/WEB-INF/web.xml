<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <display-name>Flex Office Web Server Solution Application</display-name>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>flexoffice-userui</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>file:/home/oab/Config/log4j-flexoffice-userui.xml</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext-flexoffice-userui.xml</param-value>
  </context-param>
   <servlet>
    <servlet-name>UsersManageServlet</servlet-name>
    <servlet-class>com.orange.flexoffice.usernui.servlet.UsersManageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsersManageServlet</servlet-name>
    <url-pattern>/users/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RoomsManageServlet</servlet-name>
    <servlet-class>com.orange.flexoffice.userui.servlet.RoomsManageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RoomsManageServlet</servlet-name>
    <url-pattern>/rooms/*</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>AuthenticationServlet</servlet-name>
    <servlet-class>com.orange.flexoffice.userui.servlet.AuthenticationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthenticationServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>