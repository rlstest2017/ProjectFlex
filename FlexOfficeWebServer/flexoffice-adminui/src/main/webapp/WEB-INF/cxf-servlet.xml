<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	  	
	<context:annotation-config/>
	
	<jaxrs:server id="server" address="/">
		<jaxrs:serviceBeans>
  			<bean class="com.orange.flexoffice.adminui.ws.endPoint.entity.impl.RoomEndpointImpl"/>
  			<bean class="com.orange.flexoffice.adminui.ws.endPoint.entity.impl.UserEndpointImpl"/>
  			<bean class="com.orange.flexoffice.adminui.ws.endPoint.entity.impl.SensorEndpointImpl"/>
  			<bean class="com.orange.flexoffice.adminui.ws.endPoint.entity.impl.GatewayEndpointImpl"/>
<!--   			<bean class="com.orange.flexoffice.adminui.ws.endPoint.data.impl.StatEndpointImpl"/> -->
  			<bean class="com.orange.flexoffice.adminui.ws.endPoint.data.impl.SystemEndpointImpl"/>
  		</jaxrs:serviceBeans>
  		 <jaxrs:extensionMappings>
            <entry key="json" value="application/json"/>
        </jaxrs:extensionMappings>
        <jaxrs:providers>
            <ref bean="jaxbJSONProvider"/>
        </jaxrs:providers>
   </jaxrs:server>

   <bean id="jaxbJSONProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider"/>
  	

</beans>