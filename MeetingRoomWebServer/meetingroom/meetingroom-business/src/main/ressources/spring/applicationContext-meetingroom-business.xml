<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!-- Import Connector -->
	<import resource="classpath*:spring/applicationContext-meetingroom-connector.xml" />

 	<bean id="phpConnector" class="com.orange.meetingroom.connector.php.PhpConnectorClient"/>
    <bean id="flexofficeConnector" class="com.orange.meetingroom.connector.flexoffice.FlexOfficeConnectorClient"/>
 	
	<!-- Scan base package -->
	<context:component-scan base-package="com.orange.meetingroom.business.connector, com.orange.meetingroom.business.service" />

	<bean id="phpConnectorManager" class="com.orange.meetingroom.business.connector.impl.PhpConnectorManagerImpl"/>
    <bean id="flexOfficeConnectorManager" class="com.orange.meetingroom.business.connector.impl.FlexOfficeConnectorManagerImpl"/>
 	
    
</beans>
